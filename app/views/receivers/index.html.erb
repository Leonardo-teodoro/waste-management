<div class="text-center col-12">
      <h1 class="text-dark">Receptores</h1>
  </div>
<div class="bg-light col-12">
<div class="d-flex justify-content-center bg-light bg-gradient flex-column py-2 px-2">
    <div class="col-md-1 mx-md-2 mx-sm-0 col-sm-12">
      <%= link_to new_receiver_path, class:"btn btn-outline-primary" do %>
        <i class="bi bi-plus-circle-fill"> Adicionar</i>
      <% end %>
    </div>
</div>
<div class="table-responsive col-12">
      <table class="table table-light  table-striped align-middle">
      <thead class="table-light">
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Email</th>
          <th scope="col">CEP</th>
          <th scope="col">Endereço</th>
          <th scope="col">Condição</th>
          <th scope="col">Aprovado</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
      <%= %>
      <% @receivers.each do |receiver| %>
        <tr>
            <td> <%= receiver.name %> </td>
            <td> <%= receiver.email %> </td>
            <td> <%= receiver.cep %> </td>
            <td> <%= receiver.street+", "+receiver.city+", "+receiver.state %> </td>
            <td> <%= receiver.condition ? icon('check-circle-fill', 'success') : icon('emoji-expressionless-fill', 'danger') %> </td>
            <td> <%= receiver.approved ? icon('check-circle-fill', 'success') : icon('emoji-expressionless-fill', 'danger') %> </td>            <td >
          <div class="d-flex justify-content-end">
            <%= link_to edit_receiver_path(receiver), class: 'btn btn-outline-primary' do %> 
                <i class="bi bi-pencil-square"></i>
            <% end %>
          <%= button_to receiver, form: { data: { turbo_confirm: "Tem certeza?" } }, method: :delete, class:"btn btn-outline-danger ml-4" do %>
                <i class="bi bi-x-circle"></i>
          <% end %>
          </div> 
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
  <div class="d-flex row justify-content-between col-12 bg-light bg-transparent py-4 px-2">
    <%= paginate(@receivers) %>
  </div>
  
</div>

