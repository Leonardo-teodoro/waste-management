<div class="  bg-light bg-gradient d-flex justify-content-center align-items-center my-5 rounded-1 mx-4">
  <%= form_with model: category,class:"row g-3 bg-light rounded-1 py-3 px-3" do |form| %>
    <% if category.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(category.errors.count, "error") %> impediram que esta categoria fosse salva:</h2>

        <ul>
          <% category.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      <div class="col-md-10">
        <%= form.label :name, "Nome", class:"form-label" %>
        <%= form.text_field :name, class:"form-control"%>
      </div>

      <div class="col-md-3">
        <%= form.submit "Enviar", class:"btn btn-primary" %>
      </div>
  <% end %>
</div>
