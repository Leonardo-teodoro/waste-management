  <div class="text-center col-12">
        <h1 class="text-dark">Categorias</h1>
    </div>
<div class="bg-light col-12">
  <div class="d-flex justify-content-center bg-light bg-gradient flex-column py-2 px-2">
      <div class="col-md-1 mx-md-2 mx-sm-0 col-sm-12">
        <%= link_to new_category_path, class:"btn btn-outline-primary" do %>
          <i class="bi bi-plus-circle-fill"> Adicionar</i>
        <% end %>
      </div>
  </div>
  <div class="table-responsive col-12">
        <table class="table table-light  table-striped align-middle">
        <thead class="table-light">
          <tr>
            <th scope="col">Nome</th>
            <th scope="col">Criado em</th>
            <th scope="col">Atualizado em</th>
            <th scope="col">Ações</th>
          </tr>
        </thead>
        <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td> <%= category.name %> </td>
            <td> <%= category.created_at.strftime("%d/%m/%Y %R") %> </td>
            <td> <%= category.updated_at.strftime("%d/%m/%Y %R") %> </td>
            <td >
            <div class="d-flex justify-content-end">
              <%= link_to edit_category_path(category), class: 'btn btn-outline-primary' do %> 
                  <i class="bi bi-pencil-square"></i>
              <% end %>
            <%= button_to category, form: { data: { turbo_confirm: "Tem certeza?" } }, method: :delete, class:"btn btn-outline-danger ml-4" do %>
                  <i class="bi bi-x-circle"></i>
            <% end %>
            </div> 
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>
    <div class="d-flex row justify-content-between col-12 bg-light bg-transparent py-4 px-2">
    <nav aria-label="Page navigation">
      <ul class="pagination pagination-sm justify-content-end">
        <li class="page-item <%= 'disabled' if @page == 1 %>">
          <%= link_to categories_path(page:@page-1), class:"page-link" do %>
            &laquo;
          <% end %>
        </li>
        <% (1..@pages).each do |page| %>
          <li class="page-item <%="active" if page == @page%>" >
          <%= link_to page, categories_path(page:page), class:  page-1 == @page ? "page-link btn btn-primary" : " page-link btn btn-outline-primary" %> 
          </li>        
        <% end %>
       
        <li class="page-item <%= 'disabled' if @page == @pages %>">
          <%= link_to categories_path(page:@page+1), class:"page-link" do %>
            &raquo;
          <% end %>
        </li>
      </ul>
    </nav>
     
    </div>
   
</div>
