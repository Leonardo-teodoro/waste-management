  <div class="text-center col-12">
        <h1 class="text-dark">Resíduos</h1>
    </div>
<div class="bg-light col-12">
  <div class="d-flex justify-content-center bg-light bg-gradient flex-column py-2 px-2">
      <div class="col-md-1 mx-md-2 mx-sm-0 col-sm-12">
        <%= link_to new_residue_path, class:"btn btn-outline-primary" do %>
          <i class="bi bi-plus-circle-fill"> Adicionar</i>
        <% end %>
      </div>
  </div>
  <div class="table-responsive col-12">
        <table class="table table-light  table-striped align-middle">
        <thead class="table-light">
          <tr>
            <th scope="col">Título</th>
            <th scope="col">Subtítulo</th>
            <th scope="col">Link</th>
            <th scope="col">Imagem</th>
            <th scope="col">Ações</th>
          </tr>
        </thead>
        <tbody>
        <% @residues.each do |residue| %>
          <tr>
            <td> <%= residue.title %> </td>
            <td> <%= residue.subtitle%> </td>
            <td> <%= residue.link%> </td>
            <td> <%= render 'residues/attachment', residue: residue, width: 200, height: 200 %> </td>
            <td >
            <div class="d-flex justify-content-end">
              <%= link_to edit_residue_path(residue), class: 'btn btn-outline-primary' do %> 
                  <i class="bi bi-pencil-square"></i>
              <% end %>
            <%= button_to residue, form: { data: { turbo_confirm: "Tem certeza?" } }, method: :delete, class:"btn btn-outline-danger ml-4" do %>
                  <i class="bi bi-x-circle"></i>
            <% end %>
            </div> 
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>
    <div class="d-flex row justify-content-between col-12 bg-light bg-transparent py-4 px-2">
      <%= paginate(@residues) %>
    </div>   
</div>
